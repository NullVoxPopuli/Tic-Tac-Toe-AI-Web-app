<!DOCTYPE html>
<html>
<head>
  <title>TicTacToeAi</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
 <script type="text/javascript">
   isWebKit = function isWebKit()
{
    return RegExp(" AppleWebKit/").test(navigator.userAgent);
}

 $(document).ready(function(){
   isAllowedToPlayGame = isWebKit();
   if(!isAllowedToPlayGame){
     $('.shell').hide();
     $('.browser_error').show();
   } else {
     $('.browser_error').hide();
     $('.shell').show();
   }
   
 });
 </script>
 
</head>
<body>

<div class="shell" style="display: none">
  <%= yield %>
</div>
<div class="browser_error" style="display: none">
  This app will only be correctly displayed in webkit browsers
</div>

<noscript class="browser_error">
  You must have javascript enabled.
</noscript>
</body>
</html>
